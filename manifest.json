{
  "manifest_version": 3,
  "name": "whatareyoudoing",
  "version": "1.0",
  "description": "Track time spent on websites and block distracting sites.",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "webNavigation",
    "alarms",
    "idle"
  ],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "scripts/background/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "pages/popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}
